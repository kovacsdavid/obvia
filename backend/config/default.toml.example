# === Server settings ===
[server]
host = "0.0.0.0"
port = 3000

# === Main Database settings ===
[main_database]
host = "db_host"
port = 5432
username = "db_user"
password = "db_password"
database = "db_database"
pool_size = 10

# === Base Tenant Database settings ===
[base_tenant_database]
host = "db_host"
port = 5432
username = "db_user"
password = "db_password"
database = "db_database"
pool_size = 10

# === Auth module settings ===
[auth]
# Placeholder for extending with more auth-related config
jwt_secret = "your_super_secret_jwt_key"
jwt_issuer = "obvia"
jwt_audience = "obvia_users"
jwt_expiration_mins = "480"

